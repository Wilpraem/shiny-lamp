import time
import os
import math

def clear_screen():
    """Очистка экрана: cls для Windows, clear для Unix-подобных систем."""
    os.system('cls' if os.name == 'nt' else 'clear')

def draw_lamp(radius, color):
    """Отрисовка лампы в виде окружности из символов в терминале."""
    width, height = 40, 20
    center_x, center_y = width // 2, height // 2

    for y in range(height):
        line = ""
        for x in range(width):
            # Вычисляем расстояние от центра
            dist = math.sqrt((x - center_x) ** 2 + (y - center_y) ** 2)
            if dist <= radius:
                line += color + "*" + "\033[0m"
            else:
                line += " "
        print(line)

def main():
    colors = ["\033[91m", "\033[94m", "\033[97m"]  # Красный, Синий, Белый (ANSI коды)
    index = 0
    try:
        while True:
            clear_screen()
            # Фиксированный радиус для лампы (можно варьировать, если хочется эффекта мерцания)
            radius = 7  
            current_color = colors[index]
            draw_lamp(radius, current_color)
            time.sleep(0.5)  # задержка между сменой цветов
            index = (index + 1) % len(colors)  # переход к следующему цвету
    except KeyboardInterrupt:
        clear_screen()
        print("Выход из программы.")

if __name__ == "__main__":
    main()
